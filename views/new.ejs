    <div class="container-fluid">
      <div class="row" id="header" action="new" method="GET">
        <div class="col-xs-10 col-sm-10 col-md-10 col-lg-10 col-xl-10 col-centered">
          <div class="status-bar-highlight">
            <span class="status-bar-user"><%= currentUser.username %> | </span>
                <span id="firstUser"><%= firstUser %></span> <span class="hide"> owes </span>
                <span id="secondUser"><%= secondUser %>
                </span> <span class="hide"> $</span><span id="amountOwed"><%= amountOwed %></span>
        </div>   
      </div>
    </div> 
    
    <div class="row">
        <div class="col-sm-12 col-centered heading">add expense
            <span><a href="/payment" class="get-even-heading">get even</a></span>
        </div>
    </div>   
    <div class="row">  
        <div class="col-sm-12 col-centered col-centered main-content">  
            <form id="form" action="new" method="POST">
                <div class="form-group">
                    <input class="form-control data-input" type="hidden" id="mainUser" name="mainUser" value=<%= currentUser.username %> required />
                </div>
                <div class="form-group btn-group btn-group-toggle user-buttons" data-toggle="buttons">
                    <input type="radio" name="subUser" value="userA" autocomplete="off" id="btnControlA" required checked></input>
                    <label class="btn primary-button userA-radio" for="btnControlA"><%= currentUser.userA %></label>

                    <input type="radio" name="subUser" value="userB" autocomplete="off" id="btnControlB" required></input>
                    <label class="btn primary-button userB-radio" for="btnControlB"><%= currentUser.userB %></label>  
                </div>
                <div class="form-group">
                    <input class="form-control data-input" type="text" id="datepicker" name="date" placeholder="date" required value="12/25">
                </div>
                <div class="form-group">
                    <input class="form-control data-input" type="text" id="desc" name="desc" placeholder="description" required value="test">
                </div>
                <div class="form-group">
                    <input class="form-control data-input" type="number" pattern="\d*" id="amount" name="amount" placeholder="cost" required value=10>
                </div>
                <div class="form-group">
                    <button id="submit" class="form-control btn primary-button">submit</button>
                </div>
            </form>
